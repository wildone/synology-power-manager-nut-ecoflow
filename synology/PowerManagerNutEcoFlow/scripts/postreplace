#!/bin/bash
# Post-replace script restores configuration captured in prereplace.
set -euo pipefail

readonly PACKAGE_NAME="PowerManagerNutEcoFlow"
readonly TARGET_ROOT="/var/packages/${PACKAGE_NAME}"
readonly TARGET_ETC="${TARGET_ROOT}/target/etc"
readonly BACKUP_DIR="${SYNOPKG_TEMP_REPLACE_FOLDER}/backup/etc"

if [ -d "${BACKUP_DIR}" ]; then
    rm -rf "${TARGET_ETC}"
    cp -a "${BACKUP_DIR}" "${TARGET_ETC}"
fi

exit 0

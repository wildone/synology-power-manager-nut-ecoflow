#!/bin/bash
# Pre-uninstall script stops running services prior to removal.
set -euo pipefail

if [ "${SYNOPKG_PKG_STATUS}" = "UNINSTALL" ] || [ "${SYNOPKG_PKG_STATUS}" = "UPGRADE" ]; then
    if /var/packages/PowerManagerNutEcoFlow/scripts/start-stop-status status >/dev/null 2>&1; then
        /var/packages/PowerManagerNutEcoFlow/scripts/start-stop-status stop || true
    fi
fi

exit 0
